# Application Configuration
# --------------------------------
APP_ENV="development"  # Options: development, staging, production
DEBUG="false"
ENABLE_AUDIT_LOGGING="false"
SENTINEL_CONFIG_PATH="path/to/your/rbac_config.json"

# PostgreSQL Database Configuration
# ---------------------------------
# NOTE: Host is overridden to 'postgres' in docker-compose.yml for container networking
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="your_database_name"
POSTGRES_USER="your_database_user"
POSTGRES_PASSWORD="your_user_password"

# Security Configuration
# --------------------------------
# IMPORTANT: SECRET_KEY must be at least 32 characters for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="super-secret-key-change-me-in-prod-must-be-32-chars-minimum"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="60"

# Tenant & OIDC Configuration
# ---------------------------------
# later, I will move this a more secure way
TENANT_ID="tenant_acme"
TENANT_DOMAIN="acme.com"
OIDC_CLIENT_ID="mock_acme_client_id"
OIDC_CLIENT_SECRET="mock_acme_secret"
OIDC_SERVER_METADATA_URL="https://dev-123456.okta.com/.well-known/openid-configuration"