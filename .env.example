# System Configuration
# --------------------
# System uses `config/config.json` as default, if not specified
SENTINEL_CONFIG_PATH="./config/config.json"

# PostgreSQL Database Configuration
# ---------------------------------
# NOTE: Host is overridden to 'postgres' in docker-compose.yml for container networking
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_DB="your_database_name"
POSTGRES_USER="your_database_user"
POSTGRES_PASSWORD="your_user_password"

# Audit Database Configuration (Optional - Separate Database)
# -----------------------------------------------------------
# Set AUDIT_USE_SEPARATE_DB=true to use a dedicated audit database
# If false, audit tables will be created in the main database
AUDIT_USE_SEPARATE_DB="false"
AUDIT_POSTGRES_HOST="localhost"
AUDIT_POSTGRES_PORT="5432"
AUDIT_POSTGRES_DB="your_audit_db_name"
AUDIT_POSTGRES_USER="your_audit_user"
AUDIT_POSTGRES_PASSWORD="your_audit_password"

# Embedding Model
# ---------------
EMBEDDING_PROVIDER="fake" # Options: 'fake', 'openai', 'gemini'
EMBEDDING_MODEL_NAME=""
EMBEDDING_API_KEY=""
EMBEDDING_VECTOR_SIZE="1536"

# Qdrant Vector Database Configuration
# ------------------------------------
QDRANT_HOST="localhost"
QDRANT_PORT="6333"
QDRANT_API_KEY=""
QDRANT_PREFER_GRPC="false"  # Set to 'true' for better performance if gRPC port 6334 is available

# Security Configuration
# --------------------------------
# IMPORTANT: SECRET_KEY must be at least 32 characters for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="super-secret-key-change-me-in-prod-must-be-32-chars-minimum"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="60"

# Tenant & OIDC Configuration
# ---------------------------------
TENANT_ID="tenant_id"
TENANT_DOMAIN="your-tenant-domain.com"
OIDC_CLIENT_ID="mock_client_id"
OIDC_CLIENT_SECRET="mock_client_secret"
OIDC_SERVER_METADATA_URL="https://dev-123456.okta.com/.well-known/openid-configuration"